
@using System.Linq
@model event_page_web.Models.Event

<h2>Yeni Etkinlik Ekle</h2>

@using (Html.BeginForm("Create", "Event", FormMethod.Post, new{enctype = "multipart/form-data"}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group mt-2">
        <label>Kapak Fotoðrafý</label>
        <input type="file" name="cover" class="form-control" />
    </div>

    <div class="form-group mt-2">
     @Html.LabelFor(m => m.Place)
     @Html.TextAreaFor(m => m.Place, new {@class = "form-control"})
    </div>
    @if(User.IsInRole("Admin"))
    {
        <button type="submit" class="btn btn-success mt-3">Etkinliði Kaydet</button>
    }
    else
    {
        <p class="text-danger mt-3"> Yeni Etkinlik Oluþturmanýz Ýçin Yönetici Hesabýyla Giriþ Yapmanýz Gerekmektedir.</p>
    }
}